
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
 
    <div class="page-content-wrap">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">

                        <!-- WIDGET SLIDER'I BAŞLAT -->
                        <div class="widget widget-default widget-carousel">
