@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    
}
 
 @model IEnumerable<WebSite.Models.Katagori>;


<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Menü Listesi / <a style="color:red;" href="/Admin/IcerikYonetimi/UstMenuEkle">Yeni Üst veya Alt Menü Ekle</a></h3>
        <ul class="panel-controls">
            <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>
            <li><a href="#" class="panel-refresh"><span class="fa fa-refresh"></span></a></li>
            <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
        </ul>
    </div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Sıra</th>
                    <th>Menü Adı</th>
                    <th>Altmenu ?</th>
                    <th>Link</th>
                    <th>Aktif Mi?</th>
                    <th style="padding-left:50px">Araçlar</th>
                </tr>
            </thead>
            <tbody>
                @await Html.PartialAsync("MenuEkle.cshtml", Model)
                <tr>         </tr>
                @if (Model.Any())
                {
                    @await Html.PartialAsync("menuler.cshtml", Model);
                }

            </tbody>

        </table>
    </div>
</div>
